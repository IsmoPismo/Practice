<% include partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header"><%=blog.title%></div>
    <div class="ui top attachment">
        <div class="item">
            <img class="ui centered rounded image" src="<%=blog.image%>" alt="one rose with wicked colors">
            <div class="content">
                <p align="center"><%=blog.created.toDateString()%></p>
            </div>
            <div class="description">
                <p><%=blog.body%></p>
            </div>
            <a class="ui orange massive basic button" href="/blogs/<%=blog._id%>/edit">Edit</a>
            <form id="delete" action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
                <button class="ui red basic massive button">Delete</button>
            </form>
        </div>
    </div>
</div>

<% include partials/footer %>